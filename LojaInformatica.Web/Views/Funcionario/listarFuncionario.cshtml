@model IEnumerable<LojaInformatica.Web.Models.modelFuncionario>
@{
    ViewBag.Title = "Listar Funcionários";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
</head>
<body>
    <div class="box">
        <h2>Lista de Funcionários cadastrados no sistema</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.cd_funcionario)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.nm_funcionario)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.ida_funcionario)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.cpf_funcionario)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.nm_genero)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.cel_funcionario)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.eml_funcionario)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.cep_funcionario)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.cd_funcionario)</th>
                    <td>@Html.DisplayFor(modelItem => item.nm_funcionario)</td>
                    <td>@Html.DisplayFor(modelItem => item.ida_funcionario)</td>
                    <td>@Html.DisplayFor(modelItem => item.cpf_funcionario)</td>
                    <td>@Html.DisplayFor(modelItem => item.nm_genero)</td>
                    <td>@Html.DisplayFor(modelItem => item.cel_funcionario)</td>
                    <td>@Html.DisplayFor(modelItem => item.eml_funcionario)</td>
                    <td>@Html.DisplayFor(modelItem => item.cep_funcionario)</td>
                        <td class="edit">
                            @Html.ActionLink("Atualizar", "editarFuncionario", new { id = item.cd_funcionario }) |
                            @Html.ActionLink("Excluir", "excluirFuncionario", new { id = item.cd_funcionario }, new { onclick = "return confirm('Deseja realmente excluir esse Funcionário?');" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>