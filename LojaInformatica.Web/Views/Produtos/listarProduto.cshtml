@model IEnumerable<LojaInformatica.Web.Models.modelProdutos>
@{
    ViewBag.Title = "Listar Produtos";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
</head>
<body>
    <div class="box">
        <h2>Lista de Produtos cadastrados no sistema</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.cd_produto)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.nm_produto)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.cd_fornecedor)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.cd_categoria)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.vl_produto)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.qt_produto)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.nm_fabricante)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.img_produto)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th class="align-middle" scope="row">@Html.DisplayFor(modelItem => item.cd_produto)</th>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.nm_produto)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.nm_fornecedor)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.nm_categoria)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.vl_produto)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.qt_produto)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.nm_fabricante)</td>
                        <td class="align-middle"><img src="@Html.DisplayFor(modelItem => item.img_produto)" style="height: 80px;"/></td>
                        
                            @if (Session["tipoGerente"] != null)
                            {
                                <td class="align-middle edit">
                                    @Html.ActionLink("Atualizar", "editarProduto", new { id = item.cd_produto }) |
                                    @Html.ActionLink("Excluir", "excluirProduto", new { id = item.cd_produto }, new { onclick = "return confirm('Deseja realmente excluir esse Produto?');" })
                                </td>
                            }                     
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>