@model LojaInformatica.Web.Models.modelFornecedor
@{
    ViewBag.Title = "Cadastro de Fornecedor";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>

    <div class="container">
        <div class="box">
            @using (Html.BeginForm("cadFornecedor", "Fornecedor", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center mb-5">Cadastro de Fornecedor</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="main row mt-3">
                    <div class="col-lg-5">
                        <div class="form-group">
                            @Html.LabelFor(m => m.nm_fornecedor)
                            @Html.EditorFor(m => m.nm_fornecedor, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: Mercado Livre", required = "required" } })
                            @Html.ValidationMessageFor(x => x.nm_fornecedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            @Html.LabelFor(m => m.tel_fornecedor)
                            @Html.EditorFor(m => m.tel_fornecedor, new { htmlAttributes = new { @class = "form-control", id = "telefone", placeholder = "(__) ____-____", required = "required" } })
                            @Html.ValidationMessageFor(x => x.tel_fornecedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cnpj_fornecedor)
                            @Html.EditorFor(m => m.cnpj_fornecedor, new { htmlAttributes = new { @class = "form-control", id = "cnpj", placeholder = "__.___.___/____-__", required = "required" } })
                            @Html.ValidationMessageFor(x => x.cnpj_fornecedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-2 mt-0">
                        @Html.LabelFor(m => m.cd_estado)
                        @Html.DropDownList("estado", null, "Escolha o Estado", new { @class = "form-select", required = "required" })
                    </div>
                    <div class="col-lg-2 mt-4">
                        @Html.LabelFor(m => m.cep_fornecedor)
                        @Html.EditorFor(m => m.cep_fornecedor, new { htmlAttributes = new { @class = "form-control", id = "cep", placeholder = "_____-___", required = "required" } })
                        @Html.ValidationMessageFor(x => x.cep_fornecedor, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-3 mt-5">
                        <button type="submit" class="btn btn-primary w-100">Cadastrar Fornecedor</button>
                    </div>
                    <div class="col-lg-3 mt-5">
                        <button type="reset" class="btn btn-danger w-100">Limpar</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#telefone").inputmask("mask", { "mask": "(99) 9999-9999" });
            $("#cnpj").inputmask("mask", { "mask": "99.999.999/9999-99" }, { reverse: true });
            $("#cep").inputmask("mask", { "mask": "99999-999" });
        });
    </script>
}
@Scripts.Render("~/bundles/inputmask")

@ViewBag.confCadastro