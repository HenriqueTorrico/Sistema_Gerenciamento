@model IEnumerable<LojaInformatica.Web.Models.modelFornecedor>
@{
    ViewBag.Title = "Listar Fornecedores";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
</head>
<body>
    <div class="box">
        <h2>Lista de Fornecedores cadastrados no sistema</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.cd_fornecedor)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.nm_fornecedor)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.tel_fornecedor)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.cnpj_fornecedor)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.uf_estado)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.cep_fornecedor)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.cd_fornecedor)</th>
                    <td>@Html.DisplayFor(modelItem => item.nm_fornecedor)</td>
                    <td>@Html.DisplayFor(modelItem => item.tel_fornecedor)</td>
                    <td>@Html.DisplayFor(modelItem => item.cnpj_fornecedor)</td>
                    <td>@Html.DisplayFor(modelItem => item.uf_estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.cep_fornecedor)</td>
                    @if (Session["tipoGerente"] != null)
                    {
                        <td class="edit">
                            @Html.ActionLink("Atualizar", "editarFornecedor", new { id = item.cd_fornecedor }) |
                            @Html.ActionLink("Excluir", "excluirFornecedor", new { id = item.cd_fornecedor }, new { onclick = "return confirm('Deseja realmente excluir esse Fornecedor?');" })
                        </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>