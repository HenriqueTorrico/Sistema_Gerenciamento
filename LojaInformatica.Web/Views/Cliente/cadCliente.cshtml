@model LojaInformatica.Web.Models.modelCliente
@{
    ViewBag.Title = "Cadastro de Cliente";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>

    <div class="container">
        <div class="box">
            @using (Html.BeginForm("cadCliente", "Cliente", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center mb-5">Cadastro de cliente</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger"})
                <div class="main row mt-3">
                    <div class="col-lg-5">
                        <div class="form-group">
                            @Html.LabelFor(m => m.nm_cliente)
                            @Html.EditorFor(m => m.nm_cliente, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: Henrique", required = "required" } })
                            @Html.ValidationMessageFor(m => m.nm_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="form-group">
                            @Html.LabelFor(m => m.sob_cliente)
                            @Html.EditorFor(m => m.sob_cliente, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: Torrico", required = "required" } })
                            @Html.ValidationMessageFor(m => m.sob_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ida_cliente)
                            @Html.EditorFor(m => m.ida_cliente, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: 17", required = "required" } })
                            @Html.ValidationMessageFor(m => m.ida_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-2 mt-3">
                        @Html.LabelFor(m => m.cpf_cliente)
                        @Html.EditorFor(m => m.cpf_cliente, new { htmlAttributes = new { @class = "form-control", id = "cpf", placeholder = "___.___.___-__", required = "required" } })
                        @Html.ValidationMessageFor(m => m.cpf_cliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-3 mt-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cd_genero)
                            @Html.DropDownList("genero", null, "Escolha o Genêro", new { @class = "form-select" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cel_cliente)
                            @Html.EditorFor(m => m.cel_cliente, new { htmlAttributes = new { @class = "form-control", id = "celular", placeholder = "(__) _____-____", required = "required" } })
                            @Html.ValidationMessageFor(m => m.cel_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-3">
                        @Html.LabelFor(m => m.cep_cliente)
                        @Html.EditorFor(m => m.cep_cliente, new { htmlAttributes = new { @class = "form-control", id = "cep", placeholder = "_____-___", required = "required" } })
                        @Html.ValidationMessageFor(m => m.cep_cliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-4 mt-3 mb-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cd_estado)
                            @Html.DropDownList("estado", null, "Escolha o Estado", new { @class = "form-select", required = "required" })
                        </div>
                    </div>
                    <div class="col-lg-6 mt-3 mb-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.eml_cliente)
                            @Html.EditorFor(m => m.eml_cliente, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: henrique@gmail.com", required = "required" } })
                            @Html.ValidationMessageFor(m => m.eml_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-5">
                        <button type="submit" class="btn btn-primary w-100">Cadastrar cliente</button>
                    </div>
                    <div class="col-lg-3 mt-5">
                        <button type="reset" class="btn btn-danger w-100">Limpar</button>
                    </div>
                </div>
            }
            </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#celular").inputmask("mask", { "mask": "(99) 99999-9999" });
            $("#cpf").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#cep").inputmask("mask", { "mask": "99999-999" });
        });
    </script>
}
@Scripts.Render("~/bundles/inputmask")

@ViewBag.confCadastro

