@model LojaInformatica.Web.Models.modelCliente
@{
    ViewBag.Title = "Editar Cliente";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <div class="box">
                <h2 class="text-center mb-5">Atualize os dados do Cliente</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.cd_cliente)
                <div class="main row mt-3">
                    <div class="col-lg-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.nm_cliente)
                            @Html.EditorFor(model => model.nm_cliente, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nm_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="form-group">
                            @Html.LabelFor(model => model.sob_cliente)
                            @Html.EditorFor(model => model.sob_cliente, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.sob_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ida_cliente)
                            @Html.EditorFor(model => model.ida_cliente, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ida_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-3">
                        @Html.LabelFor(m => m.cpf_cliente)
                        @Html.EditorFor(m => m.cpf_cliente, new { htmlAttributes = new { @class = "form-control", id = "cpf", placeholder = "___.___.___.__" } })
                    </div>
                    <div class="col-lg-3 mt-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.cd_genero)
                            @Html.EditorFor(model => model.cd_genero, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cd_genero, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-3">
                        <div class="form-group">
                            @Html.LabelFor(model => model.cel_cliente)
                            @Html.EditorFor(model => model.cel_cliente, new { htmlAttributes = new { @class = "form-control", id = "celular", placeholder = "(__) _____-____" } })
                            @Html.ValidationMessageFor(model => model.cel_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-3">
                        @Html.LabelFor(model => model.eml_cliente)
                        @Html.EditorFor(model => model.eml_cliente, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.eml_cliente, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-4 mt-3 mb-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.cd_estado)
                            @Html.EditorFor(model => model.cd_estado, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cd_estado, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6 mt-3 mb-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.cep_cliente)
                            @Html.EditorFor(model => model.cep_cliente, new { htmlAttributes = new { @class = "form-control", id = "cep", placeholder = "_____-___" } })
                            @Html.ValidationMessageFor(model => model.cep_cliente, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-5">
                        <button type="submit" class="btn btn-primary w-100">Salvar</button>
                    </div>
                </div>

            </div>
        </div>
    }
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    </body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#celular").inputmask("mask", { "mask": "(99) 99999-9999" });
            $("#cpf").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#cep").inputmask("mask", { "mask": "99999-999" });
        });
    </script>
}
@Scripts.Render("~/bundles/inputmask")
