@model IEnumerable<LojaInformatica.Web.Models.modelCategoria>
@{
    ViewBag.Title = "Listar Categoria";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css" integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
</head>
<body>
    <div class="box">
        <h2>Lista de Categorias cadastradas no sistema</h2>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.cd_categoria)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.nm_categoria)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.desc_categoria)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.cd_categoria)</th>
                        <td>@Html.DisplayFor(modelItem => item.nm_categoria)</td>
                        <td>@Html.DisplayFor(modelItem => item.desc_categoria)</td>

                        @if (Session["tipoGerente"] != null)
                        {
                            <td class="edit">
                                @Html.ActionLink("Atualizar", "editarCategoria", new { id = item.cd_categoria }) |
                                @Html.ActionLink("Excluir", "excluirCategoria", new { id = item.cd_categoria }, new { onclick = "return confirm('Deseja realmente excluir essa Categoria?');" })
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>