@model LojaInformatica.Web.Models.modelVendas
@{
    ViewBag.Title = "Venda";
    Layout = "~/Views/Shared/_LayoutFuncionario_Gerente.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>

    <div class="container">
        <div class="box">
            @using (Html.BeginForm("cadVenda", "Vendas", FormMethod.Post))
            {
                <h2 class="text-center mb-5">Efetuando uma venda</h2>
                <div class="main row mt-3">
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cd_cliente)
                            @Html.DropDownList("cliente", null, "Escolha o cliente", new { @class = "form-select", required = "required" })
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cd_produto)
                            @Html.DropDownList("produto", null, "Escolha o produto", new { @class = "form-select", required = "required" })
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            @Html.LabelFor(m => m.qt_produto)
                            @Html.EditorFor(m => m.qt_produto, new { htmlAttributes = new { @class = "form-control", name = "mult", placeholder = "Ex: 3", required = "required" } })
                        </div>
                    </div>
                    <div class="col-lg-3">
                        @Html.LabelFor(m => m.vl_total)
                        @Html.EditorFor(m => m.vl_total, new { htmlAttributes = new { @class = "form-control", id = "valor", placeholder = "Ex: R$ 9.999,99", required = "required" } })
                    </div>
                    <div class="col-lg-3 mt-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cd_funcionario)
                            @Html.DropDownList("funcionario", null, "Escolha o Funcionário", new { @class = "form-select", required = "required" })
                        </div>
                    </div>
                    <div class="col-lg-3 mt-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.cd_pagamento)
                            @Html.DropDownList("pagamento", null, "Forma de Pagamento", new { @class = "form-select", required = "required" })
                        </div>
                    </div>

                    <div class="col-lg-3 mt-5">
                        <button type="submit" class="btn btn-primary w-100">Efetuar uma venda</button>
                    </div>
                    <div class="col-lg-3 mt-5">
                        <button type="reset" class="btn btn-danger w-100">Limpar</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#valor").inputmask("mask", { "mask": "R$ 9.999,99" });
        });
    </script>
}
@Scripts.Render("~/bundles/inputmask")

